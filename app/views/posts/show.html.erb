  <p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
<% if PostPolicy.new(current_user, @post).publish? %>
  <p id="status">
    <b>Status:</b>
    <%= @post.published? ? "Published" : "Unpublished" %>
  </p>
<% end %>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>
<p>
  Showing <%= @post.comments.count %>
  <strong>Coments:</strong>
  <% @post.comments.each do |c|%>
    <div>
      <%= c.content %>
    </div>
  <% end %>
</p>

<%= link_to 'Post a Comment', new_post_comment_path(@post), id: "new_comment_link", remote: true %> |
<%= link_to 'Edit', edit_post_path(@post), id: "edit_post_link", remote: true %> |
<%= link_to 'Back', posts_path %>|
<%= link_to 'Destroy', @post, id: "destroy_post_link", method: :delete, remote: true %>

